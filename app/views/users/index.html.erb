<% i = 1 %>
<h1>All users</h1>

<table>
<tr>
  <% @users.each do |user| %>
      <td><%= link_to image_tag(user.avatar_url, :alt => user.name, :class => "photo"), user %></td>
	<% if (i != 0) %>
		<% if (i%8 == 0) && (i != @users.count-1) %>
		</tr><tr>
		<% else %>
		<% end %>
	<% end %>
	<% i += 1 %>
  	<% end %>
</table>

